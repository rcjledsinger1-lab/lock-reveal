<div class="calculator">
  <div class="display" id="display">0</div>

  <div class="buttons">
    <button class="btn-gray" onclick="clearAll()">AC</button>
    <button class="btn-gray" onclick="toggleSign()">±</button>
    <button class="btn-gray" onclick="percent()">%</button>
    <button class="btn-orange" onclick="operator('/')">÷</button>

    <button class="btn-dark" onclick="number('7')">7</button>
    <button class="btn-dark" onclick="number('8')">8</button>
    <button class="btn-dark" onclick="number('9')">9</button>
    <button class="btn-orange" onclick="operator('*')">×</button>

    <button class="btn-dark" onclick="number('4')">4</button>
    <button class="btn-dark" onclick="number('5')">5</button>
    <button class="btn-dark" onclick="number('6')">6</button>
    <button class="btn-orange" onclick="operator('-')">−</button>

    <button class="btn-dark" onclick="number('1')">1</button>
    <button class="btn-dark" onclick="number('2')">2</button>
    <button class="btn-dark" onclick="number('3')">3</button>
    <button class="btn-orange" onclick="operator('+')">+</button>

    <button class="btn-dark zero" onclick="number('0')">0</button>
    <button class="btn-dark" onclick="number('.')">.</button>
    <button class="btn-orange" onclick="calculate()">=</button>
  </div>
</div>

<script>
let current = "0";
let previous = null;
let operation = null;

const display = document.getElementById("display");

function update(){
  display.textContent = current;
}

function number(num){
  if(current === "0" && num !== "."){
    current = num;
  } else {
    if(num === "." && current.includes(".")) return;
    current += num;
  }
  update();
}

function operator(op){
  previous = current;
  operation = op;
  current = "0";
}

function calculate(){
  if(previous === null || operation === null) return;
  let result;
  const a = parseFloat(previous);
  const b = parseFloat(current);

  switch(operation){
    case "+": result = a + b; break;
    case "-": result = a - b; break;
    case "*": result = a * b; break;
    case "/": result = b === 0 ? "Error" : a / b; break;
  }

  current = result.toString();
  previous = null;
  operation = null;
  update();
}

function clearAll(){
  current = "0";
  previous = null;
  operation = null;
  update();
}

function toggleSign(){
  if(current !== "0"){
    current = current.startsWith("-") ? current.slice(1) : "-" + current;
    update();
  }
}

function percent(){
  current = (parseFloat(current) / 100).toString();
  update();
}
</script>

